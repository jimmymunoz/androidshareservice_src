<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ikbal_jimmy.shareservices">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ikbal_jimmy.shareservices.MainActivity" />
        </activity>
        <activity android:name=".RegisterActivity" />
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".AddSerciceActivity"
            android:label="@string/title_activity_add_sercice"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UnidentifiedActivity"
            android:label="@string/title_activity_noidentifi"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ServiceCategoryActivity" />
        <activity
            android:name=".ConversationsActivity"
            android:icon="@drawable/app_icons_13"
            android:label="Conversations" />
        <activity android:name=".MessagesActivity" />
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profil"
            android:theme="@style/AppTheme.NoActionBar" />

        <service android:name=".NotificationService" />

        <activity android:name=".UserServiceListActivity" />
        <activity
            android:name=".UserOrdersActivity"
            android:label="@string/title_activity_user_orders" />
        <activity android:name=".OrderDetailActivity" />
        <activity android:name=".ServiceDetailFragmentActivity"></activity>
    </application>

</manifest>
