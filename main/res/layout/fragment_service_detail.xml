<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.ServiceDetailFragment">


    <Button
        android:id="@+id/button"
        android:layout_width="137dp"
        android:layout_height="60dp"
        android:text="Contacter le fournisseur "
        android:background="#187887"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="left|bottom" />

    <Button
        android:id="@+id/Button_paiment"
        android:layout_width="155dp"
        android:layout_height="60dp"
        android:text="Paiment "
        android:background="#187887"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right|bottom" />

    <LinearLayout
        android:layout_width="186dp"
        android:layout_height="181dp"
        android:layout_alignTop="@+id/imageIcon"
        android:layout_toRightOf="@+id/imageIcon"
        android:orientation="vertical"
        android:layout_gravity="center">
        titreservice
        <TextView
            android:id="@+id/titreservice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:text="service"
            android:textSize="@dimen/font_size_big" />
        <TextView
            android:id="@+id/titrecategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:text="category"
            android:textSize="@dimen/font_size_big" />
        <TextView
            android:id="@+id/adresseservice"
            android:layout_width="wrap_content"
            android:layout_marginLeft="24px"
            android:layout_height="wrap_content"

            android:text="adress"
            android:textSize="@dimen/font_size_big" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_gravity="right"
            />

        <TextView
            android:id="@+id/priceservice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:text="prix "
            android:textSize="@dimen/font_size_big" />

        <TextView
            android:id="@+id/descriptionservice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:text="descripton"
            android:textSize="@dimen/font_size_big" />

    </LinearLayout>

    <ImageView
        android:layout_width="158dp"
        android:layout_height="112dp"
        android:id="@+id/imageView3"
        android:src="@drawable/ic_launcher"
        android:layout_gravity="center_horizontal|top" />


</FrameLayout>
